{
    "MyGreetingDynamoDBFunction": {
        "lambda": {
            "pathParameters": {
                "lang": "ja"
            }
        },
        "apigateway": {
            "path": "/hello/en",
            "method": {
                "value": "GET",
                "items": [
                    "GET",
                    "POST",
                    "PUT",
                    "DELETE",
                    "HEAD",
                    "OPTIONS",
                    "PATCH"
                ]
            }
        }
    },
    "MyGreetingDynamoDBGetFunction": {
        "apigateway": {
            "path": "/hello/ja",
            "method": {
                "value": "GET",
                "items": [
                    "GET"
                ]
            }
        }
    },
    "MyGreetingDynamoDBPutFunction": {
        "apigateway": {
            "path": "/hello/ja",
            "method": {
                "value": "PUT",
                "items": [
                    "PUT"
                ]
            },
            "body": {
                "hello": "こんにちは"
            }
        }
    }
}